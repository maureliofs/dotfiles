#-------------------------------------------------------------------
# Bar
#-------------------------------------------------------------------
bar {
	# font pango:Inconsolata for Powerline 11
	font pango: Hack Nerd Font Regular 10
	# font pango: JetBrainsMono Nerd Font Regular 10
	# status_command i3status
	position top
	# status_command i3blocks
  	status_command ~/.config/i3/bumblebee-status/bumblebee-status \
		-m spotify arch-update cpu memory disk battery pulseout datetime dunstctl \
  		-p disk.path="/home" datetime.format="%d %b %Y, %a %H:%M" \
  		-t onedark-powerline

   	tray_output HDMI-1

#	colors {
#		background #181818
#		statusline #ffffff
#		separator #555555
#
#		focused_workspace #333333 #333333 #ffffff
#		active_workspace #333333 #333333 #ffffff
#		inactive_workspace #181818 #181818 #ffffff
#		urgent_workspace #2f343f #d14343 #2f343f
#	}

	colors {
	    background $base00
	    separator  $base01
	    statusline $base04

	    # State             Border  BG      Text
	    focused_workspace   $base05 $base0D $base00
	    active_workspace    $base05 $base03 $base00
	    inactive_workspace  $base03 $base01 $base05
	    urgent_workspace    $base08 $base08 $base00
	    binding_mode        $base00 $base0A $base00
	}

}


#-------------------------------------------------------------------
# Bordas
#-------------------------------------------------------------------
for_window [class=".*"] border pixel 1
new_window 1pixel

# client.focused #ffffff #333333 #ffffff #2986cc #ffffff
# client.focused #ffffff #333333 #ffffff #A6BF7F #ffffff

# Property Name         Border  BG      Text    Indicator Child Border
client.focused          $base05 $base0D $base00 $base08 $base0C
client.focused_inactive $base01 $base01 $base05 $base03 $base01
client.unfocused        $base01 $base00 $base05 $base01 $base01
client.urgent           $base08 $base08 $base00 $base08 $base08
client.placeholder      $base00 $base00 $base05 $base00 $base00
client.background       $base07

